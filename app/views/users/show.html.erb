<h1>Profile for <%= @user.first_name %></h1>

<p>
  <%= image_tag @user.photo.url(:small) %>
</p>

<p>
  Username/Email: 
  <%= @user.email %>
</p>

<p>
  First name: 
  <%= @user.first_name %>
</p>

<p>
  Last name: 
  <%= @user.last_name %>
</p>

<p class="button"><%= link_to "Logout", root_url + "log_out" %></p>

<% if @user.id == session[:user_id] %>
  <p class="button"><%= link_to "Edit Profile", edit_user_path(@user) %></p>
  <p class="button"><%= link_to "My Tickets", tickets_path %></p>
<% end %>
