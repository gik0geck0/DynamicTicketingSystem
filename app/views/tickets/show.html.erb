<h1>Ticket #<%= @ticket.id %></h1>

<p>
  <%= link_to 'Update', new_ticket_ticket_update_path(@ticket) %>
</p>
<table>
  <tr>
    <td>
      Ticket ID
    </td>
    <td>
      <%= @ticket.id %>
    </td>
  </tr>
  <tr>
    <td>
      Name
    </td>
    <td>
      <%= @ticket.name %>
    </td>
  </tr>
  <tr>
    <td>
      Status
    </td>
    <td>
      <%= @ticket.status.name %>
    </td>
  </tr>
  <tr>
    <td>
      Description
    </td>
    <td>
      <%= @ticket.description %>
    </td>
  </tr>
</table>
<table>
  <% @ticket.ticket_updates.each do |tu| %>
    <tr>
      Ticket update
    </tr>
  <% end %>
</table>
