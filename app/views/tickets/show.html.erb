<h1>Ticket #<%= @ticket.id %></h1>

<table>
  <tr>
    <td>
      Ticket ID
    </td>
    <td>
      <%= @ticket.id %>
    </td>
  </tr>
  <tr>
    <td>
      Name
    </td>
    <td>
      <%= @ticket.name %>
    </td>
  </tr>
  <tr>
    <td>
      Status
    </td>
    <td>
      <%= @ticket.status.name %>
    </td>
  </tr>
  <tr>
    <td>
      Description
    </td>
    <td>
      <%= @ticket.description %>
    </td>
  </tr>
</table>
<%= link_to 'Update', ticket_ticket_update_path(@ticket), :contoller => 'tickets/ticket_update', :action => 'new' %>
