<h1>Create a new Ticket</h1>

<%= form_for @ticket do |f| %>
  <div class=field>
    <%= f.label :name %><br/>
    <%= f.text_field :name %><br/>
  </div>

  <div class=field>
    <%= f.label 'Owner' %><br/>
    <%= f.select :user_id, options_for_select(User.all.map { |x| [x.email, x.id] } ) %>
  </div>

  <div class=field>
    <%= f.label :status %><br/>
    <%= f.select :status_id, options_for_select(Statuses.all.map { |x| [x.name, x.id] } ) %>
  </div>

  <div class=field>
    <%= f.label :description %><br/>
    <%= f.text_field :description %><br/>
  </div>

  <div class=field>
    <%= f.submit "Create!" %>
  </div>
<% end %>
