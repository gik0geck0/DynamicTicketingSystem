<h1>My Tickets</h1>

<p class="button"><%= link_to "Create New Ticket", new_ticket_path %></p>

<table border="0" >
  <tr>
    <td>
      Ticket ID
    </td>
    <td>
      Name
    </td>
    <td>
      Status
    </td>
    <td>
      Description
    </td>
  </tr>
  <% @tickets.each do |ticket| %>
    <tr class="clickable" onclick="document.location = '<%= root_url + "tickets/#{ticket.id}" %>'">
      <td>
        <%= ticket.id %>
      </td>
      <td>
        <%= ticket.name %>
      </td>
      <td>
        <%= ticket.get_current_status().name %>
      </td>
      <td>
        <%= ticket.description %>
      </td>
    </tr>
  <% end %>
</table>
