<h1>Log in</h1>

<%= form_tag sessions_path do %>
  <p>
    <%= label_tag :email %><br/>
    <%= text_field :email, params[:email] %>
  </p>
  <p>
    <%= label_tag :password %><br/>
    <%= password_field :password, params[:password] %>
  </p>

  <p class="button"><%= submit_tag "Log in" %></p>
  <p class="button"><%= link_to "Register", new_user_path %></p>
<% end %>
